<table class="table">
  <thead>
    <tr>
      <th>药品名称</th>
      <th>药品价格</th>
      <th>药品详情</th>
      <th>修改药品信息</th>
      <th>删除药品</th>
    </tr>
  </thead>

  <tbody>
    <% @drugs.each do |drug| %>
      <tr>
        <td><%= drug.name %></td>
        <td><%= drug.price %></td>
        <td><%= link_to '查看', drug %></td>
        <td><%= link_to '修改', edit_drug_path(drug) %></td>
        <td><%= link_to '删除', drug, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '录入新药品', new_drug_path,class: 'btn pull-right' %>
